<h1 class="mt-5 mb-4 header">Register</h1>

<form action="/register" method="post">
    
    <div class="mb-3">
        <label for="desc" class="form-label">Name</label>
        <textarea class="form-control" id="name" name="name" rows="3" required></textarea>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" step="0.01">
    </div>
    <div class="mb-3">
        <label for="passowrd" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password">
        
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>